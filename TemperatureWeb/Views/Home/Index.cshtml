@model TemperatureModel;


@{
    ViewData["Title"] = "Home Page";
}



@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{

    <div class="container d-flex justify-content-evenly shadow-lg p-3 mb-5 bg-body rounded">
    <div class="card shadow-lg p-3 mb-5 bg-body rounded" style="width: 33%;">
        <div class="card-body">
            @Html.DropDownListFor(m => m.tempFrom,
            new SelectList(Enum.GetValues(typeof(Temperatures))),
            "Convert From")
        </div>
    </div>

    <div class="d-flex align-items-center card shadow-lg p-3 mb-5 bg-body rounded" style="height: 200px;">
        @Html.Label("Temperature")
        @Html.TextBoxFor(m => m.temp)
        <button type="submit" value="Submit">Calculate</button>

        <p>@ViewBag.test</p>
    </div>

    <div class="card shadow-lg p-3 mb-5 bg-body rounded" style="width: 33%;">
        <div class="card-body">
            @Html.DropDownListFor(m => m.tempTo,
            new SelectList(Enum.GetValues(typeof(Temperatures))),
            "Convert To")
        </div>
    </div>
</div>

}
